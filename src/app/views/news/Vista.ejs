<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Registro de Problema</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="" class="navbar-brand mx-auto">LLC</a>
    </nav>
    
    <div class="row">
      <div class="col"></div>
      <div class="col-sm-5 mt-4 card">
        <form class="card-body" action="/news" method="post">
          <h3 class="card-title">Ingresar reporte</h3>
          <div class="form-group">
            <input name="problem_id" type="text" class="form-control" placeholder="ID" value="2" >
          </div>
          <div name="Problema" class="form-group">
            <label for="sel1">Select problem:</label>
            <select class="form-control" id="sel1" name="Problema">
              <option>Deforestacion</option>
              <option>Mineria Ilegal</option>
              <option>Contaminacion del agua</option>
              <option>Otros...</option>
            </select>
          </div>
          <div class="form-group">
            <input name="Departamento" type="text" class="form-control" placeholder="Departamento">
          </div>
          <div class="form-group">
            <input name="Municipio" type="text" class="form-control" placeholder="Municipio">
          </div>
          <div class="form-group">
            <input name="Localidad" type="text" class="form-control" placeholder="Localidad">
          </div>
          <div class="form-group">
            <input name="Fecha" type="text" class="form-control" placeholder="Fecha">
          </div>
          <div class="form-group">
            <input name="Descripcion" type="text" class="form-control" placeholder="Descripcion">
          </div>
          <div class="form-group">
            <input name="EscalaPeligro" type="text" class="form-control" placeholder="Escala de peligro (1-10)">
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
      <div class="col"></div>     
    </div>

    <div class="row">
      <div class="col"></div>  
      <div class="col-sm-5 mt-4 card">
        <form class="card-body" action="/search" method="post">
          <h3 class="card-title">Buscar reporte por ID</h3>
          <div class="form-group">
            <input name="problem_id" type="text" class="form-control" placeholder="ID" >
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
      <div class="col"></div>  
    </div>

    <div class="row">
      <div class="col"></div>  
      <div class="col-sm-5 mt-4 card">
        <form class="card-body" action="/delete" method="post">
          <h3 class="card-title">Borrar reporte por ID</h3>
          <div class="form-group">
            <input name="problem_id" type="text" class="form-control" placeholder="ID" >
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
      <div class="col"></div>  
    </div>

     <div class="row">
      <div class="col mt-4 text-center">
      <table class="table table-striped table-bordered">
        <tr>
          <td>Problema</td>
          <td>Departamento</td>
          <td>Municipio</td>
          <td>Localidad</td>
          <td>Fecha</td>
          <td>Descripcion</td>
          <td>Escala Peligro</td>
        </tr>
        <script>
        for(var i = 0; i < problemas.length ; i++){ 
          <tr>
            <td> problemas[i][0] </td>
            <td> problemas[i][1] </td>
            <td> problemas[i][2]</td>
            <td> problemas[i][3] </td>
            <td> problemas[i][4] </td>
            <td> problemas[i][5] </td>
            <td> problemas[i][6] </td>            
          </tr>
         }
        </script>
      </table>
    </div>
    </div>
  </body>
</html>
